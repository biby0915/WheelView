<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal">


    <com.zby.wheelview.WheelView
        android:id="@+id/wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/white"
        app:cyclic="true"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        app:decimalDigitsNumber="3"
        app:gravity="right"
        app:normalTextColor="@color/colorPrimaryDark"
        app:normalTextSize="14dp"
        app:selectedTextColor="@color/colorAccent"
        app:selectedTextSize="25sp"
        app:visibleItemNum="5" />


    <com.zby.wheelview.WheelView
        android:id="@+id/wheel2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        app:integerFormat="%03d" />
</LinearLayout>