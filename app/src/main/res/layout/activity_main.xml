<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.zby.wheelview.WheelView
        android:id="@+id/wheel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="100dp"
        app:dividerColor="#e6e6e6"
        app:dividerHeight="1dp"
        app:selectedTextSize="25sp"
        app:normalTextSize="14sp"
        app:normalTextColor="@color/colorPrimary"
        app:selectedItemBackgroundColor="#f5f5f5"
        app:selectedTextColor="@color/colorPrimaryDark" />
</FrameLayout>