<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <com.zby.wheelview.WheelView
        android:id="@+id/wheel"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        android:background="@color/white"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        app:cyclic="true"
        app:decimalDigitsNumber="3"
        app:normalTextColor="@color/colorPrimaryDark"
        app:normalTextSize="14dp"
        app:selectedTextColor="@color/colorAccent"
        app:selectedTextSize="40dp"
        app:visibleItemNum="5" />


